<templateSet group="html/xml">
  <template name="T" value="&lt;$TAG$&gt;$SELECTION$&lt;/$TAGNAME$&gt;&#10;" description="Surround with &lt;tag&gt;&lt;/tag&gt;" toReformat="true" toShortenFQNames="true">
    <variable name="TAG" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="TAGNAME" expression="firstWord(TAG)" defaultValue="&quot;&quot;" alwaysStopAt="false" />
    <context>
      <option name="XSL_TEXT" value="true" />
    </context>
  </template>
  <template name="CD" value="&lt;![CDATA[&#10;$SELECTION$&#10;]]&gt;" description="Surround with CDATA section" toReformat="false" toShortenFQNames="false">
    <context>
      <option name="COMPLETION" value="false" />
      <option name="JSP" value="true" />
      <option name="XSL_TEXT" value="true" />
    </context>
  </template>
  <template name="jvoid" value="javascript:void(0)" description="void" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="HTML" value="true" />
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="cpanel" value="&lt;div class=&quot;panel panel-default&quot;&gt;&#10;    &lt;div class=&quot;panel-heading&quot;&gt;&#10;        &lt;h4 class=&quot;panel-title&quot;&gt;$END&lt;/h4&gt;&#10;    &lt;/div&gt;&#10;    &lt;div class=&quot;panel-body&quot;&gt;&#10;        &lt;!--content--&gt;&#10;    &lt;/div&gt;&#10;&lt;/div&gt;" description="" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="HTML" value="true" />
    </context>
  </template>
  <template name="{=" value="{= $var$ =}" description="" toReformat="false" toShortenFQNames="true">
    <variable name="var" expression="" defaultValue="var" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="line::c" value="&lt;label class=&quot;checkbox-inline&quot;&gt;&#10;  &lt;input type=&quot;checkbox&quot; name=&quot;&quot; value=&quot;option1&quot;&gt; 1&#10;&lt;/label&gt;&#10;&lt;label class=&quot;checkbox-inline&quot;&gt;&#10;  &lt;input type=&quot;checkbox&quot; name=&quot;&quot; value=&quot;option2&quot;&gt; 2&#10;&lt;/label&gt;&#10;&lt;label class=&quot;checkbox-inline&quot;&gt;&#10;  &lt;input type=&quot;checkbox&quot; name=&quot;&quot; value=&quot;option3&quot;&gt; 3&#10;&lt;/label&gt;" description="inline check" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="HTML" value="true" />
      <option name="PHP" value="true" />
      <option name="XML" value="true" />
    </context>
  </template>
  <template name="[[" value="[[ $var$ ]]" description="bracket laravel" toReformat="false" toShortenFQNames="true">
    <variable name="var" expression="" defaultValue="var" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="block-btn" value="&lt;div class=&quot;box box-default&quot;&gt;&#10;    &lt;button id=&quot;btn-edit&quot; class=&quot;btn btn-info&quot; type=&quot;button&quot;&gt;&lt;i class=&quot;glyphicon glyphicon-edit&quot;&gt;&lt;/i&gt; Edit&lt;/button&gt;&#10;&lt;/div&gt;" description="" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="HTML" value="true" />
      <option name="PHP" value="true" />
    </context>
  </template>
</templateSet>